---
import { InformationCircleIcon } from '@heroicons/react/24/outline'
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "A Used Car Price Predictor and Recommender", image = "/images/example.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale = 1" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image}/>
		<title>{title}</title>
	</head>
	<body class="h-full w-full min-h-screen bg-indigo-100">
	
		<header class="flex justify-between items-center px-24 py-8 max-sm:px-12 max-sm:py-10 w-full mx-auto">
			<a href="/" class="flex items-center gap-x-2">
				<img
				src = "/logo.png"
				alt = "OPPA Icon"
				class = "object-contain h-20 w-20 max-sm:w-10"
				/>
			<div class="flex flex-col">
				<p class="uppercase text-5xl max-sm:text-2xl text-gray-700 font-bold">OPPA</p>
				<span class="max-sm:text-xs text-gray-500">Developed by Pre Owned Pros</span>
			</div>
		</a>
			<ul class="flex gap-x-2">
				<li>
					<a href="/aboutus" class="text-xl max-sm:text-xs text-gray-700 font-semibold flex items-center gap-x-2 ">        
						<InformationCircleIcon className="size-6 max-sm:size-5 text-gray-700" />
							About Us
					</a>
				</li>
			</ul>
		</header>

		
		<slot />
	</body>
</html>
